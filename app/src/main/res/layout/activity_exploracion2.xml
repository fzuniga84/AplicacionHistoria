<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".exploracion2">

    <include
        layout="@layout/action_bar_toolbar"
        ></include>


    <TextView
        android:id="@+id/txt1"
        android:layout_width="565dp"
        android:layout_height="88dp"
        android:fontFamily="@font/arima_madurai_black"
        android:text="Haz clic en la opción correcta"
        android:textColor="#370F02"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="1036dp"
        android:layout_height="116dp"
        android:fontFamily="@font/squadgoalsootf"
        android:gravity="center_horizontal"
        android:text="¿Cuál de las siguientes personas pertenece a la época más antigua?"
        android:textAlignment="center"
        android:textColor="#370F02"
        android:textSize="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362" />

    <RadioGroup
        android:id="@+id/rg2"
        android:layout_width="782dp"
        android:layout_height="257dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721">

        <RadioButton
            android:id="@+id/resp01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squadgoalsootf"
            android:text="Una anciana de 64 años de la actualidad"
            android:textColor="#370F02"
            android:textSize="37dp" />

        <RadioButton
            android:id="@+id/resp02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squadgoalsootf"
            android:text="Un soldado romano antes de Cristo"
            android:textColor="#370F02"
            android:textSize="37dp" />

        <RadioButton
            android:id="@+id/resp03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squadgoalsootf"
            android:text="Un agricultor de la civilización Maya"
            android:textColor="#370F02"
            android:textSize="37dp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/btnatr"
        android:onClick="ant2"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/btnsig"
        android:onClick="sig2"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>