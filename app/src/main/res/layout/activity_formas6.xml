<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/fondo"
    tools:context=".Formas6">

    <include
        layout="@layout/action_bar_toolbar"
        ></include>

    <TextView
        android:layout_width="565dp"
        android:layout_height="69dp"
        android:fontFamily="@font/arima_madurai_black"
        android:text="Selecciona la opción correcta"
        android:textColor="#370F02"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="1137dp"
        android:layout_height="122dp"
        android:fontFamily="@font/squadgoalsootf"
        android:gravity="center_horizontal"
        android:text="¿De qué manera el medio geográfico influyó en la transición del nomadismo al sedentarismo en las primeras tribus de América?"
        android:textAlignment="center"
        android:textColor="#370F02"
        android:textSize="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

    <RadioGroup
        android:id="@+id/rg8"
        android:layout_width="1119dp"
        android:layout_height="308dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.677"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693">

        <RadioButton
            android:id="@+id/resp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squadgoalsootf"
            android:text="Influyó de manera que los mamíferos de gran tamaño comenzaron a desaparecer. "
            android:textColor="#370F02"
            android:textSize="36dp" />

        <RadioButton
            android:id="@+id/resp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squadgoalsootf"
            android:text="Influyó mediante el cambio climático que se experimentaba y el auge de la agricultura en la cultura de los pobladores."
            android:textColor="#370F02"
            android:textSize="36dp" />

        <RadioButton
            android:id="@+id/resp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squadgoalsootf"
            android:text="Influyó de manera que los primeros pobladores iniciaron la especialización de oficios"
            android:textColor="#370F02"
            android:textSize="36dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn17"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/btnatr"
        android:onClick="ant"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/btn18"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/btnsig"
        android:onClick="sig"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>